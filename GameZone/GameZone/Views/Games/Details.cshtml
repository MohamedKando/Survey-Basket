@model Game
@{
    ViewData["Title"] = Model.Name;
}
<div class="card border-success rounded-4 mt-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 p-5">
                <div>
                    <h1 class="text-success fw-bolder">@Model.Name</h1>
                    <span class="badge bg-info fs-5">@Model.category?.Name</span>
                    <p class="fs-5">@Model.Description</p>
                </div>
                <div>
                    @foreach (var gameDevice in Model.Device)
                    {
                                    <i class="@gameDevice.device.icon fs-1 me-2 text-secondary"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                 <img src="@($"{FileSettings.ImagePath}/{Model.Cover}")" alt="@Model.Name" class="w-100"  />
            </div>
        </div>
    </div>
</div>

