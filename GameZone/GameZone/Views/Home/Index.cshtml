@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}

@if(!Model.Any())
{
        <div class="alert alert-dismissible alert-warning">
      
      <h4 class="alert-heading">Warning!</h4>
      <p class="mb-0">There is No Games To Show.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
                <div class="col-lg-4 col-md-6">
                      <div class="card border-success mb-3">
                    
                  <a class="card-body text-decoration-none" style="background-image:url(@($"{FileSettings.ImagePath}/{game.Cover}"))
                  ; background-size: cover; background-position: center; height: 500px;" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                    
                                         <div class=" d-flex align-items-end h-100 "><span class="badge bg-success  fs-6">@game.category.Name</span></div>
          
                    
                  </a>
                         
                  <div class="card-footer text-muted d-flex justify-content-between aligen-items-center">
                      <h5>@game.Name</h5>
                      
                      <div>
                          @foreach(var gameDevice in game.Device)
                            {
                                <i class="@gameDevice.device.icon fs-4 me-2"></i>
                            }
                                    
                        </div>
                                
                  </div>
                </div>
                </div>
        }  
    </div>

}


